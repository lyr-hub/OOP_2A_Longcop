class Appliance:
      def __init__(self, brand, model):
         self.brand = brand
         self.model = model
      def operate(self):
        print("Operating!")
      def info(self):
        print(f"Brand: {self.brand}\nModel: {self.model}")

class WashingMachine(Appliance):
      def operate(self):
          print("Washing Cloths!")  

class Refrigerator(Appliance):
    def operate(self):
          print("Keeping food cold!")  

class Microwave(Appliance):
    def operate(self):
          print("Heating food!")  